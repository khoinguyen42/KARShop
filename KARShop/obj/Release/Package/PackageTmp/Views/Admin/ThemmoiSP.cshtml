@model KARShop.Models.SANPHAM

@{
    ViewBag.Title = "ThemmoiSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content">
    <div class="card">
        <h2 style="text-align:center">Thêm mới sản phẩm</h2>
        @using (Html.BeginForm("ThemmoiSP", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <td>Tên sản phẩm</td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSP)
                    </div>
                </div>

                <div class="form-group">
                    <td>Giá bán</td>
                    @*@Html.LabelFor(model => model.Giaban, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Giaban)
                    </div>
                </div>

                <div class="form-group">
                    <td>Mô tả</td>
                    @*@Html.LabelFor(model => model.Mota, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <textarea name="Mota" rows="15" cols="50" placeholder="Mô tả thông tin sản phẩm"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <td>Ảnh bìa</td>
                    @*@Html.LabelFor(model => model.Anhbia, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <input type="file" name="fileupload" />
                        <span style="color:red">@ViewBag.Thongbao</span>
                    </div>
                </div>

                <div class="form-group">
                    <td>Ngày cập nhật</td>
                    @*@Html.LabelFor(model => model.Ngaycapnhat, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <input type="date" , name="Ngaycapnhat" />
                        @Html.ValidationMessageFor(model => model.Ngaycapnhat)
                    </div>
                </div>

                <div class="form-group">
                    <td>Thể loại</td>
                    @*@Html.LabelFor(model => model.Soluongton, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Soluongton)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaTL, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("MaTL")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color: #9c27b0" />
                    </div>
                </div>
                <div style="font-size:20px" >
                    <p>
                        @Html.ActionLink("Về trang quản lý SP", "Sanpham")
                    </p>
                </div>
            </div>
        }
    </div>
</div>
