    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
</div>*@
    
<div class="MenuTrang">
    @Html.PagedListPager(Model,page=>Url.Action("Home", new { page }))
</div>
